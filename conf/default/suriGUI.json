{
  "global": {
    "home": "/opt/suriGUI",
    "notifications": {
      "enable": true,
      "duration": 30,
      "position": "Center"
    },
    "update": {
      "enable": false,
      "interval": 7
    },
    "log": {
      "enable": true,
      "verbosity": "normal",
      "erroronly": false,
      "file": true
    }
  },
  "suricata": {
    "mode": "ips",
    "action": "rejectboth",
    "config": "/opt/suriGUI/conf/suricata/suricata.yaml",
    "rules": "/opt/suriGUI/conf/suricata/suricata.rules",
    "update": {
      "enable": true,
      "interval": 7
    },
    "log": {
      "enable": true,
      "location": "/opt/suriGUI/log",
      "keep": true,
      "interval": 30
    }
  }
}